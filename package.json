{
    "name": "foundationPureHtml",
    "version": "0.0.0",
    "description": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "http://github.com/richfaber/foundation-pure-html"
    },
    "scripts": {
        "clean": "recursive-delete dist",
        "js-chunk": "rollup --config task/rollup.chunk.js",
        "js-page": "rollup --config task/rollup.page.js",
        "css": "babel-node task/css.js",
        "img": "babel-node task/img.js",
        "html": "babel-node task/html.js",
        "html-lint": "html-validate dist/**/*.html",
        "build-dirty": "npm-run-all -p js-chunk js-page css img html",
        "build": "cross-env NODE_ENV=production npm-run-all -s clean build-dirty html-lint",
        "watch-css": "chokidar ./src/resource/scss/** -c \"npm run css -- {path} {event}\"",
        "watch-js-chunk": "chokidar ./src/resource/js/*.* -c \"npm run js-chunk\"",
        "watch-js-page": "chokidar ./src/resource/js/page/**/* -c \"npm run js-page\"",
        "watch-img": "chokidar ./src/resource/image/** -c \"npm run img -- {path} {event}\"",
        "watch-html": "chokidar **/*.njk -c \"npm run html -- {path} {event}\"",
        "watch-html-lint": "chokidar ./dist/**/*.html -c \"html-validate {path}\"",
        "watch": "npm-run-all -p watch-css watch-js-chunk watch-js-page watch-img watch-html watch-html-lint",
        "server-start": "babel-node task/server",
        "server": "npm-run-all -p clean build-dirty server-start watch"
    },
    "devDependencies": {
        "@babel/cli": "^7.24.5",
        "@babel/core": "^7.24.5",
        "@babel/node": "^7.23.9",
        "@babel/preset-env": "^7.24.5",
        "@rollup/plugin-alias": "^5.1.0",
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-eslint": "^9.0.5",
        "@rollup/plugin-inject": "^5.0.5",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "autoprefixer": "^10.4.19",
        "browser-sync": "^2.26.14",
        "chokidar-cli": "^2.1.0",
        "cross-env": "^7.0.3",
        "dotenv": "^16.4.5",
        "glob": "^10.3.12",
        "html-validate": "^8.18.2",
        "imagemin-cli": "^6.0.0",
        "imagemin-dir": "^1.0.0-alpha.1",
        "imagemin-mozjpeg": "^8.0.0",
        "imagemin-pngcrush": "^6.0.0",
        "imagemin-pngquant": "^8.0.0",
        "imagemin-sharp": "^1.0.6",
        "imagemin-svgo": "^9.0.0",
        "imagemin-webp": "^8.0.0",
        "imagemin-zopfli": "^6.0.0",
        "js-beautify": "^1.15.1",
        "node-sass-alias-importer": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "nunjucks-to-html": "^1.1.0",
        "postcss": "^8.4.38",
        "recursive-fs": "^2.1.0",
        "rollup": "^2.6.1",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.26.5",
        "svgo": "^1.3.2"
    },
    "dependencies": {
        "jquery": "^3.7.1"
    }
}
